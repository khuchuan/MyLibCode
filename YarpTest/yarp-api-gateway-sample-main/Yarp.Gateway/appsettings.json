{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:4999",
        "Protocols": "Http1"
      },
      "Https": {
        "Url": "https://localhost:5000",
        "Protocols": "Http1AndHttp2"
      }
    }
  },

  //"Kestrel": {
  //  "Endpoints": {
  //    "http": {
  //      "Url": "http://localhost:5000",
  //      "Protocols": "Http2"
  //    }
  //  }
  //},

  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        //"AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/users-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/products-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "server-grpc-route": {
        "ClusterId": "server-grpc-cluster",
        "Match": {
          "Path": "server-grpc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }

    },
    "Clusters": {

      "server-grpc-cluster": {
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        },
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:7601/" // 5161
          }
        }
      },

      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5201/"
            //"Address": "http://localhost:5200/"
          }
        }
      },
      "products-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5101/"
          }
        }
      }

    }
  }
}
